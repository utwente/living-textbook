{% extends 'single_column.html.twig' %}

{% block before_title %}
  {% import '_macro/_action_buttons.html.twig' as buttons %}
  {{ buttons.header() }}
  {{ buttons.edit_button(path('app_user_fallbackedit', {user: user.id})) }}
  {{ buttons.remove_button(path('app_user_fallbackremove', {user: user.id})) }}
  {{ buttons.list_button(path('app_user_fallbacklist')) }}
  {{ buttons.footer() }}
{% endblock %}

{% block title %}
  {{ 'user.fallback.reset-password'|trans({'%user%': user.displayName}) }}
{% endblock %}

{% block content %}
  <p>{{ 'user.fallback.reset-password-text'|trans }}</p>

  {{ form(form) }}
{% endblock %}
