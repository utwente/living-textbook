{% extends 'single_column.html.twig' %}

{% block before_title %}
  {% import '_macro/_action_buttons.html.twig' as buttons %}
  {{ buttons.edit_row(
    path('app_contributor_remove', {contributor: contributor.id}),
    path('app_contributor_list'),
  ) }}
{% endblock %}

{% block title %}
  {{ 'contributor.edit-title'|trans({'%item%': contributor.name}) }}
{% endblock %}

{% block content %}
  {% from '_macro/_review.html.twig' import reviewNotice %}
  {{ reviewNotice(contributor) }}

  {{ form(form) }}
{% endblock %}
