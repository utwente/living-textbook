{% extends 'single_column.html.twig' %}

{% block before_title %}
  {% import '_macro/_action_buttons.html.twig' as buttons %}
  {{ buttons.edit_row(
    path('app_externalresource_remove', {externalResource: externalResource.id}),
    path('app_externalresource_list')
  ) }}
{% endblock %}

{% block title %}
  {{ 'external-resource.edit-title'|trans({'%item%': externalResource.title}) }}
{% endblock %}

{% block content %}
  {% from '_macro/_review.html.twig' import reviewNotice %}
  {{ reviewNotice(externalResource) }}

  {{ form(form) }}
{% endblock %}
