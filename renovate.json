{
    "$schema": "https://docs.renovatebot.com/renovate-schema.json",
    "extends": [
        "config:recommended",
        ":automergeDisabled",
        ":disableDevDependencies",
        ":labels(Maintenance,RenovateBot)"
    ],
    "ignorePresets": [
        "group:symfony"
    ],
    "dependencyDashboard": true,
    "dependencyDashboardLabels": [
        "Maintenance",
        "RenovateBot"
    ],
    "commitMessagePrefix": "[RenovateBot]",
    "composerIgnorePlatformReqs": [
        "ext-apcu",
        "ext-calendar",
        "ext-decimal",
        "ext-exif",
        "ext-gd",
        "ext-imagick",
        "ext-intl",
        "ext-ldap",
        "ext-pdo",
        "ext-sodium",
        "ext-xsl",
        "ext-zip"
    ],
    "internalChecksFilter": "strict",
    "lockFileMaintenance": {
        "enabled": true,
        "rebaseWhen": "auto",
        "schedule": "before 9am on monday"
    },
    "npmrc": "registry=https://registry.npmjs.org",
    "platformAutomerge": true,
    "postUpdateOptions": [
        "npmDedupe"
    ],
    "prConcurrentLimit": 0,
    "prHourlyLimit": 10,
    "rangeStrategy": "pin",
    "rebaseWhen": "never",
    "minimumReleaseAge": "7 days",
    "timezone": "Europe/Amsterdam",
    "packageRules": [
        {
            "matchDepNames": [
                "php"
            ],
            "rangeStrategy": "replace"
        },
        {
            "enabled": true,
            "rebaseWhen": "conflicted",
            "minimumReleaseAge": null,
            "matchPackageNames": [
                "drenso/{/,}**",
                "@drenso/{/,}**"
            ]
        },
        {
            "rebaseWhen": "conflicted",
            "minimumReleaseAge": null,
            "matchPackageNames": [
                "twig/{/,}**"
            ]
        },
        {
            "groupName": "Symfony packages",
            "groupSlug": "symfony",
            "minimumReleaseAge": null,
            "matchPackageNames": [
                "symfony/{/,}**",
                "!/-contracts$/",
                "!symfony/maker-bundle",
                "!symfony/webpack-encore-bundle"
            ]
        },
        {
            "groupName": "Symfony contracts",
            "groupSlug": "symfony-contracts",
            "minimumReleaseAge": null,
            "matchPackageNames": [
                "/^symfony/[\\w+-]+-contracts$/"
            ]
        },
        {
            "enabled": true,
            "matchPackageNames": [
                "@types/{/,}**"
            ]
        },
        {
            "matchUpdateTypes": [
                "minor",
                "patch",
                "pin",
                "digest"
            ],
            "rebaseWhen": "auto",
            "automerge": true,
            "minimumReleaseAge": null,
            "matchPackageNames": [
                "@types/{/,}**"
            ]
        },
        {
            "matchUpdateTypes": [
                "minor",
                "patch"
            ],
            "matchPackageNames": [
                "@types/node"
            ],
            "enabled": false
        },
        {
            "matchPackageNames": [
                "jms/serializer"
            ],
            "groupName": "JMS serializer packages",
            "groupSlug": "jms-serializer"
        },
        {
            "groupName": "DataTables packages",
            "groupSlug": "datatables",
            "matchPackageNames": [
                "datatables.net{/,}**"
            ]
        },
        {
            "matchPackageNames": [
                "autoprefixer",
                "browserslist",
                "postcss"
            ],
            "groupName": "CSS processing dependencies",
            "groupSlug": "css-dependencies"
        },
        {
            "matchManagers": [
                "nuget"
            ],
            "groupName": "Sentry packages",
            "groupSlug": "sentry",
            "matchPackageNames": [
                "Sentry{/,}**"
            ]
        },
        {
            "groupName": "Twig packages",
            "groupSlug": "twig",
            "matchPackageNames": [
                "/^twig/twig$/",
                "/^twig/\\w+-extra$/",
                "/^twig/extra-bundle$/"
            ]
        },
        {
            "matchDepTypes": [
                "engines"
            ],
            "enabled": false
        },
        {
            "matchPackageNames": [
                "@utwente/dotron-app"
            ],
            "rebaseWhen": "conflicted",
            "minimumReleaseAge": null
        }
    ],
    "customManagers": [
        {
            "customType": "regex",
            "managerFilePatterns": [
                "/^\\.gitlab-ci\\.yml$/"
            ],
            "matchStrings": [
                "#\\s?renovate: datasource=(?<datasource>.*?) depName=(?<depName>.*?)( versioning=(?<versioning>.*?))?\\s.*?_VERSION: (?<currentValue>.*)\\s"
            ],
            "versioningTemplate": "{{#if versioning}}{{{versioning}}}{{else}}semver{{/if}}",
            "extractVersionTemplate": "^v?(?<version>.*)$"
        }
    ]
}
