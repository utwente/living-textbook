{
  "compilerOptions": {
    "target": "esnext",
    "module": "esnext",
    "strict": true,
    "jsx": "preserve",
    "importHelpers": true,
    "moduleResolution": "node",
    "experimentalDecorators": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "sourceMap": true,
    "baseUrl": ".",
    "types": [
      "webpack-env",
      "jquery",
      "bootstrap"
    ],
    "paths": {
      "@/*": [
        "assets/js/*"
      ],
      "@fos/*": [
        "vendor/friendsofsymfony/jsrouting-bundle/Resources/public/js"
      ]
    },
    "lib": [
      "esnext",
      "dom",
      "dom.iterable",
      "scripthost"
    ]
  },
  "include": [
    "assets/**/*.ts",
    "assets/**/*.tsx"
  ],
  "exclude": [
    "node_modules"
  ]
}
